---
let {title, faqs} = Astro.props;
---
<section class="container mx-auto p-4">
	<h2 class="mb-4 text-blue text-2xl font-bold">
		<div class="w-3 inline-block">
			<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 320 512" xmlns="http://www.w3.org/2000/svg">
				<path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"/>
			</svg>
		</div>
		{title}
	</h2>
	{
		faqs.map((item, index) => (
			<details class="group mb-4 border-b border-b-blue pb-2">
				<summary class="font-bold list-none cursor-pointer flex">
					<span class="flex-1">{index+1} {item.q}</span>
					<div class="w-4 group-open:rotate-90 transition-all">
						<svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 320 512" xmlns="http://www.w3.org/2000/svg">
							<path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"/>
						</svg>
					</div>
				</summary>
				<p>{item.a}</p>
			</details>
		))
	}
</section>