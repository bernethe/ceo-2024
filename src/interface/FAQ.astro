---
let {title, faqs, MyIcon=undefined} = Astro.props;
---
<section class="container mx-auto p-4">
	<h2 class="mb-4 text-white bg-blue text-2xl font-bold uppercasem my-4 py-2 px-4 rounded-full inline-block">
		{ MyIcon && <span class="w-8 inline-block"><MyIcon /></span> }
		{title}
	</h2>
	{
		faqs.map((item) => (
			<div class="mb-4 pb-2">
				<p>
					<strong>{item.q}</strong> 
					{item.a}
				</p>
			</div>
		))
	}
</section>